{% extends 'base.html.twig' %}

{% block title %}Je haar zit goed!{% endblock %}

{% block body %}
    <div class="container-md container-fluid px-4 px-md-0">
        <div class="row">
            <div class="col-12 text-white text-center">
                <h1 class="big-text fw-semibold">Haarproducten Bestellen</h1>
                <p class="fw-semibold">Bij ons kunt u producten afhalen, zolang de voorraad strekt!</p>
            </div>
            <div class="col-12">
                <div class="row">
                    {% for product in products %}
                    <div class="col-lg-3 col-md-4 col-6 py-2">
                        <a target="__blank" href="{{ path('app_webshop_detail',{'id': product.id}) }}" class="bg-white text-center very-rounded pt-3 d-inline-block w-100 text-decoration-none">
                            <img class="product-image img-fluid" src="{{ asset('images/products/'~product.image) }}" alt="haar product"/>
                            <p class="text-start text-dark fw-bold ms-3">&euro; {{ (product.price / 100)|number_format(2, ',', '.')}}</p>
                        </a>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
