<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Je haar zit goed!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('images/logo/favicon.ico') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&display=swap" rel="stylesheet">
        {% endblock %}

        {{ block('tag_manager') }}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
            <script src="https://kit.fontawesome.com/810d16b4ae.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}

    </head>
    <body class="bg-dark">
    {{ block('tag_manager_no_script') }}
    {% for message in app.flashes('success') %}
        <div class="flash-message start-50 translate-middle-x alert alert-success mx-auto position-absolute" style="z-index:99;">
            {{ message }}
        </div>
        <script>
            setTimeout(function() { document.querySelector('.flash-message').remove(); }, 3000);
        </script>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="flash-message start-50 translate-middle-x alert alert-warning mx-auto position-absolute" style="z-index:99;">
            {{ message }}
        </div>
        <script>
            setTimeout(function() { document.querySelector('.flash-message').remove(); }, 3000);
        </script>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        <div class="flash-message start-50 translate-middle-x alert alert-danger mx-auto position-absolute" style="z-index:99;">
            {{ message }}
        </div>
        <script>
            setTimeout(function() { document.querySelector('.flash-message').remove(); }, 3000);
        </script>
    {% endfor %}
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}"><img class="img-fluid w-50" src="{{ asset('images/logo/android-chrome-192x192.png') }}" alt="Logo" width="150" height="50"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse flex-row-reverse" id="navbarNav">
                <ul class="navbar-nav fs-5">
                    <li class="nav-item mx-3">
                        <a class="nav-link text-white fw-semibold" href="{{ path('app_home') }}">Home</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link text-white fw-semibold" href="{{ path('app_home') }}?diensten=1">Diensten</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link text-white fw-semibold" href="{{ path('app_webshop') }}">Producten</a>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="btn btn-secondary fs-5 text-white fw-semibold" href="#">Afspraak maken</a>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="nav-link text-white" href="{{ path('cart_index') }}"><i class="fa-solid fa-cart-shopping"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {{ block('body') }}
        <div class="container">
            <footer class="row row-cols-1 row-cols-sm-2 row-cols-md-5 py-5 my-5 justify-content-center">
                <div class="col mb-3">
                    <a href="/" class="d-flex align-items-center mb-3 link-dark text-decoration-none">
                        <img class="img-fluid w-25 w-md-100" src="{{ asset('images/logo/android-chrome-192x192.png') }}" alt="logo"/>
                    </a>
                </div>
                <div class="col mb-3">
                    <h5 class="fw-semibold text-white">Navigatie</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="{{ path('app_home') }}" class="nav-link p-0 text-muted">Home</a></li>
                        <li class="nav-item mb-2"><a href="{{ path('app_home') }}" class="nav-link p-0 text-muted">Diensten</a></li>
                        <li class="nav-item mb-2"><a href="{{ path('app_webshop') }}" class="nav-link p-0 text-muted">Producten</a></li>
                        <li class="nav-item mb-2"><a href="{{ path('app_home') }}" class="nav-link p-0 text-muted">Afspraak maken</a></li>
                    </ul>
                </div>
            </footer>
        </div>
    </body>
    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const dienstenRequest = urlParams.get('diensten')

        if (dienstenRequest === 1)
        {
            document.getElementById('diensten').scrollIntoView();
        }
    </script>
</html>


